<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <PlatformTarget>x64</PlatformTarget>
        <RootNamespace>BackpackMod</RootNamespace>
        <AssemblyName>Backpack</AssemblyName>
        <IsPackable>false</IsPackable>
        <LangVersion>latest</LangVersion>
		<RestoreAdditionalProjectSources>
			https://api.nuget.org/v3/index.json;
			https://nuget.bepinex.dev/v3/index.json;
			https://nuget.samboy.dev/v3/index.json
		</RestoreAdditionalProjectSources>
		<GameBaseDir>C:\Program Files (x86)\Steam\steamapps\common\Schedule I</GameBaseDir>
		<GameAssemblyDir>$(GameBaseDir)\BepInEx\interop</GameAssemblyDir>
    </PropertyGroup>

    <ItemGroup>
		<PackageReference Include="BepInEx.Unity.IL2CPP" Version="6.0.0-be*" />
		<PackageReference Include="BepInEx.PluginInfoProps" Version="2.*" />
    </ItemGroup>

    <PropertyGroup>
        <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
        <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="BackpackMod.cs"/>
        <Compile Include="Patches\PlayerManagerPatch.cs" />
        <Compile Include="Patches\PlayerPatch.cs" />
        <Compile Include="Patches\PlayerSpawnerPatch.cs" />
        <Compile Include="PlayerBackpack.cs" />
        <Compile Include="PlayerExtensions.cs" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="Assembly-CSharp">
        <HintPath>$(GameAssemblyDir)\Assembly-CSharp.dll</HintPath>
        <Private>False</Private>
      </Reference>
      <Reference Include="FishNet.Runtime">
        <HintPath>$(GameAssemblyDir)\FishNet.Runtime.dll</HintPath>
        <Private>False</Private>
      </Reference>
      <Reference Include="Il2Cppmscorlib">
        <HintPath>$(GameAssemblyDir)\Il2Cppmscorlib.dll</HintPath>
        <Private>False</Private>
      </Reference>
      <Reference Include="Il2CppSystem.Core">
        <HintPath>$(GameAssemblyDir)\Il2CppSystem.Core.dll</HintPath>
        <Private>False</Private>
      </Reference>
      <Reference Include="Newtonsoft.Json">
        <HintPath>$(GameAssemblyDir)\Newtonsoft.Json.dll</HintPath>
		  <Private>false</Private>
      </Reference>
      <Reference Include="Unity.InputSystem">
        <HintPath>$(GameAssemblyDir)\Unity.InputSystem.dll</HintPath>
        <Private>False</Private>
      </Reference>
      <Reference Include="Unity.TextMeshPro">
        <HintPath>$(GameAssemblyDir)\Unity.TextMeshPro.dll</HintPath>
        <Private>False</Private>
      </Reference>
      <Reference Include="UnityEngine">
        <HintPath>$(GameAssemblyDir)\UnityEngine.dll</HintPath>
        <Private>False</Private>
      </Reference>
      <Reference Include="UnityEngine.CoreModule">
        <HintPath>$(GameAssemblyDir)\UnityEngine.CoreModule.dll</HintPath>
        <Private>False</Private>
      </Reference>
      <Reference Include="UnityEngine.InputLegacyModule">
        <HintPath>$(GameAssemblyDir)\UnityEngine.InputLegacyModule.dll</HintPath>
        <Private>False</Private>
      </Reference>
      <Reference Include="UnityEngine.UI">
        <HintPath>$(GameAssemblyDir)\UnityEngine.UI.dll</HintPath>
        <Private>False</Private>
      </Reference>
    </ItemGroup>
</Project>
